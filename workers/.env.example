# AI App Builder Workers Configuration

# Server Configuration
NODE_ENV=development
PORT=3002
HOST=0.0.0.0

# Backend Communication
BACKEND_URL=http://localhost:3000

# Worker Configuration
WORKER_CONCURRENCY=5
JOB_TIMEOUT=300000
MAX_RETRIES=3
MAX_CONCURRENT_JOBS=3
MAX_WORKERS=5

# Queue Configuration
REDIS_URL=redis://localhost:6379
QUEUE_NAME=ai-app-builder-jobs

# Build Configuration
BUILD_TIMEOUT=600000
DOCKER_ENABLED=false
TEMP_DIR=./temp

# AWS Configuration (for artifact storage)
AWS_REGION=us-east-1
ARTIFACTS_BUCKET=ai-app-builder-artifacts
LOGS_BUCKET=ai-app-builder-logs

# Log Streaming
LOG_STREAMING_PORT=3004

# Logging
LOG_LEVEL=info
VERBOSE_LOGGING=true