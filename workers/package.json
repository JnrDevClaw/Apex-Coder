{
  "name": "workers",
  "version": "1.0.0",
  "description": "AI worker services for code generation and processing",
  "main": "index.js",
  "scripts": {
    "dev": "node --watch index.js",
    "start": "node index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "format": "prettier --write .",
    "clean": "rm -rf dist node_modules coverage"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "aws-sdk": "^2.1691.0",
    "bullmq": "^5.63.0",
    "dockerode": "^4.0.2",
    "fastify": "^5.0.0",
    "fastify-plugin": "^5.0.0",
    "ioredis": "^5.8.2",
    "node-fetch": "^3.3.2",
    "octokit": "^5.0.5",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/test/**",
      "!index.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}